# Development Database (PostgreSQL - Replit)
DATABASE_URL=postgresql://username:password@host:port/database

# Production Database (Supabase - Vercel)
SUPABASE_DATABASE_URL=postgresql://postgres:password@your-project.supabase.co:5432/postgres
# Alternatively, you can use:
# DATABASE_URL_PRODUCTION=postgresql://postgres:password@your-project.supabase.co:5432/postgres

# PostgreSQL Connection Details (for Replit)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=botanical_platform

# Google OAuth (Optional - for production authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Session Secret
SESSION_SECRET=your_session_secret_key_here

# Environment
NODE_ENV=development